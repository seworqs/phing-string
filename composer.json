{
  "name": "seworqs/phing-string",
  "description": "A collection of Phing tasks for string casing, namespaces, path conversion, and random string generation. Useful for manipulating and transforming strings within your Phing build process.",
  "type": "library",
  "license": "Apache-2.0",
  "keywords": ["seworqs", "phing", "string"],
  "version": "1.1.0",
  "authors": [
    {
      "name": "S.E. Franke",
      "email": "sven.franke@seworqs.eu"
    }
  ],
  "include-path": [
    "resources/phing"
  ],
  "autoload": {
    "psr-4": {
      "Seworqs\\Phing\\String\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Seworqs\\Phing\\String\\Test\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "seworqs/commons-string": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11",
    "phing/phing": "^3.0"
  },
  "scripts": {
    "test": "phpunit"
  }
}